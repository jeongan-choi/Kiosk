<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fontFamily="@font/font"
    android:paddingLeft="64dp"
    android:paddingRight="64dp">

    <Button
        android:id="@+id/previous_button"
        android:background="@drawable/button"
        android:drawableLeft="@drawable/previous_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  이전 화면으로  "
        android:fontFamily="@font/notosanskr_bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@+id/home_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline0" />

    <Button
        android:id="@+id/home_button"
        android:background="@drawable/button"
        android:drawableLeft="@drawable/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  처음 화면으로  "
        android:fontFamily="@font/notosanskr_bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="10dp"
        app:layout_constraintRight_toRightOf="@+id/finish_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <TextView
        android:id="@+id/chair_select_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_bold"
        android:text="관람하실 좌석을 선택하세요."
        android:textAlignment="center"
        android:textSize="38sp"
        android:textColor="@color/black"
        android:bufferType="spannable"
        app:layout_constraintBottom_toTopOf="@+id/guideline01"
        app:layout_constraintLeft_toLeftOf="@id/finish_button"
        app:layout_constraintRight_toRightOf="@id/finish_button"
        app:layout_constraintTop_toBottomOf="@+id/guideline0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guideline1"
        app:layout_constraintLeft_toLeftOf="@id/finish_button"
        app:layout_constraintRight_toRightOf="@id/finish_button"
        app:layout_constraintTop_toBottomOf="@+id/guideline01">

        <Button
            android:id="@+id/screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_margin="30dp"
            android:text="화   면"
            android:fontFamily="@font/notosanskr_bold"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:padding="10dp"/>

        <LinearLayout
            android:id="@+id/linearlayout01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/chair01"
                android:background="@drawable/button_click"
                android:layout_margin="5dp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/chair02"
                android:background="@drawable/button_click"
                android:layout_margin="5dp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/chair03"
                android:background="@drawable/button_click"
                android:layout_margin="5dp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/chair04"
                android:background="@drawable/button_click"
                android:layout_margin="5dp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/chair05"
                android:background="@drawable/button_click"
                android:layout_margin="5dp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/chair06"
                android:background="@drawable/button_click"
                android:layout_margin="5dp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/chair07"
                android:background="@drawable/button_click"
                android:layout_margin="5dp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/chair08"
                android:background="@drawable/button_click"
                android:layout_margin="5dp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout03"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/chair09"
                android:background="@drawable/button_click"
                android:layout_margin="5dp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/chair10"
                android:background="@drawable/button_click"
                android:layout_margin="5dp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10" />
            <Button
                android:id="@+id/chair11"
                android:background="@drawable/button_click"
                android:layout_margin="5dp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="11" />
            <Button
                android:id="@+id/chair12"
                android:background="@drawable/button_click"
                android:layout_margin="5dp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="12" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearlayout04"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/chair13"                android:background="@drawable/button_click"
                android:layout_margin="5dp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="13" />
            <Button
                android:id="@+id/chair14"                android:background="@drawable/button_click"
                android:layout_margin="5dp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="14" />
            <Button
                android:id="@+id/chair15"                android:background="@drawable/button_click"
                android:layout_margin="5dp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15" />
            <Button
                android:id="@+id/chair16"                android:background="@drawable/button_click"
                android:layout_margin="5dp"
                android:fontFamily="@font/notosanskr_bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="16" />

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <Button
        android:id="@+id/finish_button"
        android:background="@drawable/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="   완료   "
        android:fontFamily="@font/notosanskr_bold"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline1"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>